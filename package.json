{
	"name": "todolang",
	"displayName": "todolang",
	"categories": [
		"Programming Languages"
	],
	"description": "Manage your todo items in .todo files",
	"publisher": "philipshield",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/philipshield/todolang"
	},
	"homepage": "https://github.com/philipshield/todolang",
	"engines": {
		"vscode": "^1.32.0"
	},
	"main": "./out/extension",
	"preview": true,
	"activationEvents": [
		"onLanguage:todolang"
	],
	"contributes": {
		"languages": [
			{
				"id": "todolang",
				"aliases": [
					"todolang",
					"todo"
				],
				"extensions": [
					".todo"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"keybindings": [
			{
				"title": "Check/Uncheck TODO",
				"command": "todolang.tickTodo",
				"category:": "TODO",
				"key": "alt-D"
			}
		],
		"commands": [
			{
				"command": "extension.tickTodo",
				"title": "Check/Uncheck TODO",
				"category": "TODO"
			}
		],
		"grammars": [
			{
				"language": "todolang",
				"scopeName": "source.todo",
				"path": "./syntaxes/todolang.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "todolang",
				"path": "./snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint -c .eslintrc.json --ext .ts ./src",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.32.0",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.5.0",
		"typescript": "^3.5.1"
	}
}