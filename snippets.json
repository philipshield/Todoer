{
	"Create TODO item": {
		"prefix": ["todo"],
		"body": [
			"- [ ] ${1|🎉,🎨,🐛,📃,🔥,🚚,🐟,👀,🏇|} ${2:description}\n$0"
		],
		"description": "Create Todo item"
	},
	"Create task": {
		"prefix": ["task"],
		"body": [
			"(${2:#task-id}) ${1:description}:\n$0\n----"
		],
		"description": "Create task (grouping of todo items)"
	}
}