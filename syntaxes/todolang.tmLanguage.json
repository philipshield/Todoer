{
	"scopeName": "source.todo",
	"name": "todolang",
	"patterns": [
		{ "include": "#todo-description-important", "comment": "important description"},
		{ "include": "#non-focus-section"},
		{ "include": "#task-section" }
	],
	"repository": {
		"non-focus-section": {
			"name": "comment.block",
			"begin": "\\(.*nonfocus.*\\).*\n",
			"end": "----",
			"patterns": [{ "include": "#todo-description-important", "comment": "important description"}]
		},
		"task-section": {
			"name": "meta.section",
			"patterns": [
				{ "include": "#task"},
				{ "include": "#todo-item"}
			]
		},
		"task": {
			"name": "entity.task",
			"patterns": [
				{ "include": "#task-id"},
				{ "include": "#task-description"}
			]
		},
		"task-id": {
			"name": "keyword.control",
			"match": "\\(#[a-zA-Z0-9-]+\\)"
		},
		"task-description": {
			"name": "markup.bold",
			"match": "[a-zA-Z0-9- ]+:[ ]*$"
		},
		"todo-item": {
			"name": "meta.todo",
			"begin": "- ",
			"end": "\n{1}",
			"patterns": [
				{ "include": "#todo-checkbox", "comment": "the todo checkbox" }, 
				{ "include": "#todo-type", "comment": "the todo type (optional)" },
				{ "include": "#todo-description-important", "comment": "important todo-description" },
				{ "include": "#todo-description", "comment": "regular todo-description" },
				{ "include": "#todo-tags", "comment": "todo tags" }
			]
		},
		"todo-checkbox": {
			"name": "entity.checkbox",
			"patterns": [
				{"include": "#todo-checkbox-undone" },
				{"include": "#todo-checkbox-done" }
			]
		},
		"todo-checkbox-undone": {
			"name": "meta.checkbox",
			"match": "[ ]"
		},
		"todo-checkbox-done": {
			"name": "constant.numeric",
			"match": "[x]"
		},
		"todo-type": {	
			"name": "entity.type",
			"match": "( )|üé®|üêõ|üìÉ|üî•|üöö|üêü|üëÄ"
		},
		"todo-description-important": {
			"name": "invalid.illegal",
			"match": "[a-zA-Z\\s]+!+"
		},
		"todo-description": {
			"name": "string.double",
			"match": "[a-zA-Z\\s]+"
		}
	}
}